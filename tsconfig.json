{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "target": "es5",
    "rootDir": "."
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}